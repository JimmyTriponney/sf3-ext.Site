<div class="ja-modal" id="panel-contact">
	<div class="ja-modal-container">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12 ja-txt-right pt-1">
					<i class="fas fa-times close"></i>
				</div>
			</div>
			<div class="row head">
				<div class="col-12">
					<h2>Envoyer un message</h2>
				</div>
			</div>
			<div class="row body">
				<div class="col-12">
					
					<p class="message ja-txt-bold ja-txt-2 ja-txt-grey ja-txt-center"></p>
					<form action="{{ path('carContactInfoCar') }}" class="ja-form" method="post">
					
						<input type="hidden" name="_id" value="{{ id }}"/>
						
						<div class="row">
							<div class="col">

								<div class="ja-input-group">
									<label class="ja-label">
										<input type="text" name="companyname" placeholder="Société" class="ja-input" />
										<sub class="errors ja-txt-red"></sub>
									</label>
								</div>

								<div class="ja-input-group">
									<label class="ja-label">
										<input type="text" name="firstname" required placeholder="Prénom" class="ja-input required" />
										<sub class="errors ja-txt-red"></sub>
									</label>
								</div>

								<div class="ja-input-group">
									<label class="ja-label">
										<input type="text" name="name" required placeholder="Nom" class="ja-input required" />
										<sub class="errors ja-txt-red"></sub>
									</label>
								</div>

								<div class="ja-input-group">
									<label class="ja-label">
										<input type="tel" name="phone" required placeholder="Téléphone" class="ja-input required" />
										<sub class="errors ja-txt-red"></sub>
									</label>
								</div>

								<div class="ja-input-group">
									<label class="ja-label">
										<input type="email" name="mail" required placeholder="Mail" class="ja-input required" />
										<sub class="errors ja-txt-red"></sub>
									</label>
								</div>

								<div class="ja-input-group">
									<label class="ja-label">
										<textarea name="message" label="Commentaire" rows=10 required class="ja-input required" placeholder="Votre message..."></textarea>
										<sub class="errors ja-txt-red"></sub>
									</label>
								</div>

								<div class="ja-input-group">
									<label class="ja-label">
										<input type="submit" class="ja-submit-red" name="send" value="VALIDER"/>
									</label>
								</div>

							</div>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>